            let a1 = {% call getTypeName type "String" %}.pure(x)
            let a2 = {% call getTypeName type "String" %}.pure(af.getArrow(x))
            return ((a_a <*> a1){% call getCommandCall type %} == a2{% call getCommandCall type %}){% call getContextCall type %}
        }
    }

